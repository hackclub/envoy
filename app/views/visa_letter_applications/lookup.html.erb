<div class="max-w-md mx-auto">
  <div class="bg-blue-900 text-white py-8 sm:py-12 px-4 sm:px-6 mb-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold mb-4">Check Application Status</h1>
      <p class="text-lg text-gray-300">Enter your reference number to check the status of your application.</p>
    </div>
  </div>

  <div class="bg-white border border-gray-300 shadow-sm p-4 sm:p-8">
    <%= form_with url: lookup_application_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :reference_number, "Reference Number", class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :reference_number, autofocus: true, placeholder: "HC-XXXXXXXX",
                         class: "w-full text-center uppercase border border-gray-300 shadow-sm p-3 focus:ring-blue-500 focus:border-blue-500" %>
        <p class="text-xs text-gray-500 mt-1 text-center">This was sent to you in your confirmation email.</p>
      </div>

      <div class="pt-4">
        <%= f.submit "Check Status â†’", class: "w-full bg-blue-700 text-white py-3 px-4 font-semibold hover:bg-blue-900 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
