<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
  <h1 class="text-2xl font-bold text-gray-900">Manual Invitations</h1>
  <%= link_to "New Invitation", new_admin_manual_invitation_path, class: "bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 text-sm font-medium" %>
</div>

<div class="bg-white rounded-lg shadow mb-6 p-4">
  <%= form_with url: admin_manual_invitations_path, method: :get, class: "flex flex-wrap gap-4" do %>
    <div>
      <%= select_tag :event_id, options_for_select(
        [["All Events", ""]] + policy_scope(Event).order(:name).map { |e| [e.name, e.id] },
        params[:event_id]
      ), class: "border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= select_tag :status, options_for_select([
        ["All Statuses", ""],
        ["Pending", "pending"],
        ["Claimed", "claimed"]
      ], params[:status]), class: "border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= submit_tag "Filter", class: "bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 cursor-pointer" %>
      <% if params[:status].present? || params[:event_id].present? %>
        <%= link_to "Clear", admin_manual_invitations_path, class: "ml-2 text-gray-500 hover:text-gray-700" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <!-- Desktop table -->
  <div class="hidden md:block overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invited By</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sent</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Application</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @invitations.each do |invitation| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= invitation.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= invitation.event.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= invitation.admin.full_name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if invitation.claimed? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Claimed
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Pending
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= invitation.created_at.strftime("%b %d, %Y %l:%M %p") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <% if invitation.visa_letter_application %>
                <%= link_to "View Application", admin_visa_letter_application_path(invitation.visa_letter_application), class: "text-blue-600 hover:text-blue-900" %>
              <% else %>
                <span class="text-gray-400">-</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Mobile cards -->
  <div class="md:hidden divide-y divide-gray-200">
    <% @invitations.each do |invitation| %>
      <div class="p-4 hover:bg-gray-50">
        <div class="flex justify-between items-start mb-2">
          <div>
            <p class="font-medium text-gray-900"><%= invitation.email %></p>
            <p class="text-sm text-gray-500"><%= invitation.event.name %></p>
          </div>
          <% if invitation.claimed? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Claimed
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              Pending
            </span>
          <% end %>
        </div>
        <div class="text-sm text-gray-500 space-y-1">
          <p><span class="font-medium text-gray-700">Invited by:</span> <%= invitation.admin.full_name %></p>
          <p><span class="font-medium text-gray-700">Sent:</span> <%= invitation.created_at.strftime("%b %d, %Y") %></p>
        </div>
        <% if invitation.visa_letter_application %>
          <div class="mt-3">
            <%= link_to "View Application â†’", admin_visa_letter_application_path(invitation.visa_letter_application), class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @invitations.empty? %>
    <div class="px-6 py-12 text-center text-gray-500">
      No manual invitations found.
    </div>
  <% end %>
</div>
