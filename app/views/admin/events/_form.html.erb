<%= form_with model: [:admin, event], class: "space-y-6" do |f| %>
  <% if event.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <h3 class="text-red-800 font-medium mb-2">Please correct the following errors:</h3>
      <ul class="list-disc list-inside text-red-700 text-sm">
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>

    <div>
      <%= f.label :slug, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :slug, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
      <p class="text-xs text-gray-500 mt-1">Leave blank to auto-generate from name</p>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :venue_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :venue_name, required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>

    <div>
      <%= f.label :venue_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :venue_address, required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :city, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :city, required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>

    <div>
      <%= f.label :country, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :country, options_for_select(Countries::LIST, event.country),
                   { prompt: "Select a country" },
                   { required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" } %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div>
      <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :start_date, required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>

    <div>
      <%= f.label :end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :end_date, required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>

    <div>
      <%= f.label :application_deadline, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.datetime_local_field :application_deadline, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>
  </div>

  <div>
    <%= f.label :contact_email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :contact_email, required: true, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
  </div>

  <% if current_admin.super_admin? %>
    <div>
      <%= f.label :admin_id, "Owner", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :admin_id, Admin.order(:last_name, :first_name).map { |a| [a.full_name, a.id] },
                   { include_blank: false },
                   { class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" } %>
      <p class="text-xs text-gray-500 mt-1">The admin who owns and manages this event</p>
    </div>
  <% end %>

  <div class="flex items-center space-x-6">
    <div class="flex items-center">
      <%= f.check_box :active, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" %>
      <%= f.label :active, "Active (visible to public)", class: "ml-2 text-sm text-gray-700" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :applications_open, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" %>
      <%= f.label :applications_open, "Accepting applications", class: "ml-2 text-sm text-gray-700" %>
    </div>
  </div>

  <div class="border-t pt-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Rejection Reason Templates</h3>
    <p class="text-sm text-gray-500 mb-4">Add pre-set rejection reasons that admins can quickly select when rejecting applications for this event.</p>
    
    <div id="rejection-templates-container" data-controller="rejection-templates">
      <div class="space-y-2 mb-4" data-rejection-templates-target="list">
        <% event.rejection_reason_templates_list.each_with_index do |template, index| %>
          <div class="flex items-center gap-2" data-rejection-templates-target="item">
            <%= hidden_field_tag "event[rejection_reason_templates][]", template %>
            <span class="flex-1 bg-gray-50 px-3 py-2 rounded-md text-sm text-gray-700"><%= template %></span>
            <button type="button" 
                    data-action="rejection-templates#remove"
                    class="text-red-600 hover:text-red-800 text-sm font-medium">
              Remove
            </button>
          </div>
        <% end %>
      </div>
      
      <% if event.rejection_reason_templates_list.empty? %>
        <%= hidden_field_tag "event[rejection_reason_templates][]", "", id: "empty-templates-placeholder" %>
      <% end %>
      
      <div class="flex gap-2">
        <input type="text" 
               data-rejection-templates-target="input"
               placeholder="Enter a rejection reason template..."
               class="flex-1 border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 text-sm">
        <button type="button" 
                data-action="rejection-templates#add"
                class="bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-700 text-sm">
          Add Template
        </button>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-4 pt-4">
    <%= link_to "Cancel", admin_events_path, class: "py-2 px-4 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit event.persisted? ? "Update Event" : "Create Event", class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 cursor-pointer" %>
  </div>
<% end %>
