<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Events</h1>
  <%= link_to "New Event", new_admin_event_path, class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <!-- Desktop table -->
  <div class="hidden md:block overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dates</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applications</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @events.each do |event| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="font-medium text-gray-900"><%= event.name %></div>
              <div class="text-sm text-gray-500"><%= event.slug %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= event.date_range %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= event.city %>, <%= event.country %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if event.accepting_applications? %>
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Open</span>
              <% elsif event.active? %>
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">Closed</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Inactive</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= event.visa_letter_applications.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to "View", admin_event_path(event), class: "text-blue-600 hover:text-blue-900" %>
              <%= link_to "Edit", edit_admin_event_path(event), class: "text-gray-600 hover:text-gray-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Mobile cards -->
  <div class="md:hidden divide-y divide-gray-200">
    <% @events.each do |event| %>
      <div class="p-4 hover:bg-gray-50">
        <div class="flex justify-between items-start mb-2">
          <div>
            <p class="font-medium text-gray-900"><%= event.name %></p>
            <p class="text-sm text-gray-500"><%= event.slug %></p>
          </div>
          <% if event.accepting_applications? %>
            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Open</span>
          <% elsif event.active? %>
            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">Closed</span>
          <% else %>
            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Inactive</span>
          <% end %>
        </div>
        <div class="text-sm text-gray-500 space-y-1">
          <p><span class="font-medium text-gray-700">Dates:</span> <%= event.date_range %></p>
          <p><span class="font-medium text-gray-700">Location:</span> <%= event.city %>, <%= event.country %></p>
          <p><span class="font-medium text-gray-700">Applications:</span> <%= event.visa_letter_applications.count %></p>
        </div>
        <div class="mt-3 flex space-x-4">
          <%= link_to "View", admin_event_path(event), class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
          <%= link_to "Edit", edit_admin_event_path(event), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
