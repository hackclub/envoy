<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Letter Templates</h1>
  <%= link_to "New Template", new_admin_letter_template_path, class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <!-- Desktop table -->
  <div class="hidden md:block overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Template Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Signatory</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @letter_templates.each do |template| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="font-medium text-gray-900"><%= template.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <% if template.event.present? %>
                <span class="text-blue-600">Event: <%= template.event.name %></span>
              <% else %>
                <span class="text-gray-600">Global</span>
                <% if template.is_default? %>
                  <span class="ml-2 inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Default</span>
                <% end %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= template.signatory_name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if template.active? %>
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Active</span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Inactive</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to "View", admin_letter_template_path(template), class: "text-blue-600 hover:text-blue-900" %>
              <%= link_to "Edit", edit_admin_letter_template_path(template), class: "text-gray-600 hover:text-gray-900" %>
              <% if template.event_id.nil? && !template.is_default? && current_admin.super_admin? %>
                <%= button_to "Set as Default", set_default_admin_letter_template_path(template), method: :post, class: "text-green-600 hover:text-green-900" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Mobile cards -->
  <div class="md:hidden divide-y divide-gray-200">
    <% @letter_templates.each do |template| %>
      <div class="p-4 hover:bg-gray-50">
        <div class="flex justify-between items-start mb-2">
          <p class="font-medium text-gray-900"><%= template.name %></p>
          <% if template.active? %>
            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Active</span>
          <% else %>
            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Inactive</span>
          <% end %>
        </div>
        <div class="text-sm text-gray-500 space-y-1">
          <p>
            <% if template.event.present? %>
              <span class="text-blue-600">Event: <%= template.event.name %></span>
            <% else %>
              <span class="text-gray-600">Global</span>
              <% if template.is_default? %>
                <span class="ml-2 inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Default</span>
              <% end %>
            <% end %>
          </p>
          <p><span class="font-medium text-gray-700">Signatory:</span> <%= template.signatory_name %></p>
        </div>
        <div class="mt-3 flex flex-wrap gap-3">
          <%= link_to "View", admin_letter_template_path(template), class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
          <%= link_to "Edit", edit_admin_letter_template_path(template), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
          <% if template.event_id.nil? && !template.is_default? && current_admin.super_admin? %>
            <%= button_to "Set as Default", set_default_admin_letter_template_path(template), method: :post, class: "text-green-600 hover:text-green-900 text-sm font-medium" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @letter_templates.empty? %>
    <div class="px-6 py-12 text-center text-gray-500">
      No letter templates found.
      <%= link_to "Create one", new_admin_letter_template_path, class: "text-red-600 hover:text-red-700" %>
    </div>
  <% end %>
</div>
